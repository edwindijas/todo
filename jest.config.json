{
  "preset": "ts-jest",
  "testEnvironment": "jest-environment-jsdom",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "roots": [
    "<rootDir>/src"
  ],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "maxWorkers": 50, 
  "collectCoverageFrom": [
    "src/**/*.{js?,ts?}",
    "!<rootDir>/node_modules/",
    "!src/**/__stories__/*.{js?,ts?}",
    "!src/**/__tests__/*.{js?,ts?}",
    "!src/main.tsx"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}